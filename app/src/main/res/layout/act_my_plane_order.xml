<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_eaeaea"
    android:orientation="vertical"
    tools:context="com.vlvxing.app.ui.PlaneDetailsActivity">

    <include layout="@layout/plane_head"/>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/common_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.handongkeji.widget.MyListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/d7"
            android:dividerHeight="0.5dp"
            android:footerDividersEnabled="false"
            ></com.handongkeji.widget.MyListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/common_no_data" />


</LinearLayout>
