<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出散步"
            android:textSize="16sp"
            android:textColor="@color/color_ea5413"
            />
        <LinearLayout
            android:id="@+id/delete_lin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close_line"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-04-12 21:20"
        android:textSize="12sp"
        android:textColor="@color/color_666666"
        android:paddingLeft="12dp"
        />
    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@mipmap/myinfo_bg"
        android:scaleType="centerCrop"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="14dp"
        />
    <RelativeLayout
        android:id="@+id/video_rel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="14dp"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/qiche"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/video_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/video"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>