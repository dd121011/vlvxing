<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f3f3f4"
    >
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/info_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                >
                <include layout="@layout/head"/>
                <RelativeLayout
                    android:id="@+id/info_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    >
                    <com.handongkeji.widget.RoundImageView
                        android:id="@+id/head_img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@mipmap/touxiang_moren"
                        />
                    <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/color_333333"
                        android:layout_toRightOf="@+id/head_img"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        />
                    <View
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="12sp"
                        android:background="@color/d7"
                        android:layout_toRightOf="@+id/name_txt"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        />
                    <ImageView
                        android:id="@+id/sex_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/line"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jump"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/d7"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nologin_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/myinfo_bg"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:id="@+id/set_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/white_set"
                    android:layout_gravity="right"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/touxiang_moren" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="37dp"
                    >
                    <TextView
                        android:id="@+id/login_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录/"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:id="@+id/regist_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/d7"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingBottom="12dp"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/information"
                    android:drawablePadding="10dp"
                    android:text="个人信息"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/indent"
                    android:drawablePadding="10dp"
                    android:text="我的订单"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/dingzhi_15"
                    android:drawablePadding="10dp"
                    android:text="我的定制"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/collect"
                    android:drawablePadding="10dp"
                    android:text="我的收藏"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/credit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/credit_card_logo"
                    android:drawablePadding="10dp"
                    android:text="信用卡申请"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/calendar_enable_color"
                        android:text="成功立领十元红包"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/jump"
                        />
                </LinearLayout>

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/share_green"
                    android:drawablePadding="10dp"
                    android:text="分享"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/share_lins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/borderstyle_white"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/qq_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textColor="@color/color_313131"
            android:textSize="13sp"
            android:drawableTop="@mipmap/qq_blue"
            android:gravity="center"
            android:drawablePadding="7dp"
            />
        <TextView
            android:id="@+id/wb_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微博"
            android:textColor="@color/color_313131"
            android:textSize="13sp"
            android:drawableTop="@mipmap/microblog_red"
            android:gravity="center"
            android:drawablePadding="7dp"
            />
        <TextView
            android:id="@+id/wx_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="@color/color_313131"
            android:textSize="13sp"
            android:drawableTop="@mipmap/wechat_green"
            android:gravity="center"
            android:drawablePadding="7dp"
            />
        <TextView
            android:id="@+id/friend_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:textColor="@color/color_313131"
            android:textSize="13sp"
            android:drawableTop="@mipmap/friends_yellow"
            android:gravity="center"
            android:drawablePadding="7dp"
            />
    </LinearLayout>
</RelativeLayout>