<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/item_lin"
    >

    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="系统公告昆仑决佛配送费地方了开始减肥电饭锅看来是大嫁风尚反馈螺蛳粉送达方式开发司法考试发爽肤水收款方式"
                android:textColor="@color/color_444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/data_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_txt"
                android:layout_marginTop="22dp"
                android:text="06-08"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/calendar"
                android:drawablePadding="6dp"
                />

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_txt"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/data_txt"
                android:text="13:07"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/clock"
                android:drawablePadding="6dp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="96dp"
            android:layout_height="72dp"
            android:src="@mipmap/photo1_toutiao"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/d7"/>
</LinearLayout>