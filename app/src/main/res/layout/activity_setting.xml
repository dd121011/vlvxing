<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_eaeaea"
    >
    <TextView
        android:id="@+id/exit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/lowgray_btn"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        />
    <include layout="@layout/head"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_lin"
        android:layout_above="@+id/exit_txt"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/password"
                    android:drawablePadding="10dp"
                    android:text="修改密码"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/phone_number"
                    android:drawablePadding="10dp"
                    android:text="更换手机号"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/jump"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_e7e7e7"
                />
            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/remind"
                    android:drawablePadding="10dp"
                    android:text="信息提醒"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:id="@+id/remind_img"
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:background="@drawable/switchbutton_on"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/about"
                    android:drawablePadding="10dp"
                    android:text="关于我们"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_e7e7e7"
                />
            <RelativeLayout
                android:id="@+id/rel5"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/opinion"
                    android:drawablePadding="10dp"
                    android:text="意见反馈"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel6"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/clear"
                    android:drawablePadding="10dp"
                    android:text="清除本地缓存"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/jump"
                    android:drawablePadding="12dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
            <RelativeLayout
                android:id="@+id/rel7"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/check"
                    android:drawablePadding="10dp"
                    android:text="检查更新"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jump"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>