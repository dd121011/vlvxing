<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/fragmentContainerFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.handongkeji.widget.NoScrollViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </com.handongkeji.widget.NoScrollViewPager>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_eaeaea" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shouye_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sy_img"
                    android:layout_width="@dimen/layout_20dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/shouye_bg_selecor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:duplicateParentState="true"
                    android:text="首页"
                    android:textColor="@color/main_tab_textcolor_selector"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faxian_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fx_img"
                    android:layout_width="@dimen/layout_20dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/jilu_bg_selecor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:duplicateParentState="true"
                    android:text="记录"
                    android:textColor="@color/main_tab_textcolor_selector"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rewan_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rw_img"
                    android:layout_width="@dimen/layout_20dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/lvtu_bg_selecor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:duplicateParentState="true"
                    android:text="旅途"
                    android:textColor="@color/main_tab_textcolor_selector"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wode_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wd_img"
                    android:layout_width="@dimen/layout_20dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/my_bg_selecor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:duplicateParentState="true"
                    android:text="我的"
                    android:textColor="@color/main_tab_textcolor_selector"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>


