<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/borderstyle_white"
    android:layout_gravity="right"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sanjiao"
        android:layout_gravity="right"
        android:paddingRight="10dp"
        />
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="right"
        >
        <TextView
            android:id="@+id/share_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textSize="16sp"
            android:textColor="@color/color_666666"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:drawableLeft="@mipmap/share_icon"
            android:drawablePadding="10dp"
            android:paddingRight="14dp"
            />
        <LinearLayout
            android:id="@+id/lins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>
            <TextView
                android:id="@+id/update_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textSize="16sp"
                android:textColor="@color/color_666666"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:drawableLeft="@mipmap/edit_icon"
                android:drawablePadding="10dp"
                android:paddingRight="14dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>
            <TextView
                android:id="@+id/delete_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="16sp"
                android:textColor="@color/color_666666"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:drawableLeft="@mipmap/delete_icon"
                android:drawablePadding="10dp"
                android:paddingRight="14dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>