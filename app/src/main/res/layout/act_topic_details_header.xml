<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/bg_eaeaea"
    android:orientation="vertical">
    <LinearLayout
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_toLeftOf="@+id/img"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/touxiang_moren" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="楼主"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@mipmap/gailou"/>
            <TextView
                android:id="@+id/name_header"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/orange"
                android:text="小二"/>
        </LinearLayout>

        <TextView
            android:id="@+id/date_header"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/calendar_enable_color"
            android:text="2017-9-18"/>

        <TextView
            android:id="@+id/time_header"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/calendar_enable_color"
            android:text="10:00"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/is_follow"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@color/orange"
            android:text="+关注"/>

    </LinearLayout>
    <TextView
        android:id="@+id/header_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="只因在人群中多看了你一眼"/>

    <com.handongkeji.widget.MyListView
        android:id="@+id/img_group"
        android:layout_width="match_parent"
        android:background="@color/calendar_disable_color"
        android:layout_height="wrap_content">

    </com.handongkeji.widget.MyListView>


</LinearLayout>