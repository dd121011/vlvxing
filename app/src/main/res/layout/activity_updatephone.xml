<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/head"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_eaeaea"
        />
    <EditText
        android:id="@+id/phone_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/phone_number"
        android:drawablePadding="14dp"
        android:hint="请输入您的新手机号"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="35dp"
        android:textColor="@color/color_666666"
        android:textSize="16sp"
        android:background="@null"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/d7"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/code_edt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/captcha"
            android:drawablePadding="14dp"
            android:inputType="number"
            android:hint="请输入验证码"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/color_666666"
            android:textSize="16sp"
            android:background="@null"
            android:maxLength="6"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            >
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/d7"/>
            <TextView
                android:id="@+id/getcode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/color_ea5413"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/d7"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/sure_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/red_btn"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="16sp" />
</LinearLayout>