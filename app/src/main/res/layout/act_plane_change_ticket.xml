<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_eaeaea"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.vlvxing.app.ui.PlaneDetailsActivity">

    <include layout="@layout/plane_head" />


        <LinearLayout
            android:id="@+id/change_info_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="改签说明"
                android:textSize="18sp"
                android:textColor="@color/calendar_enable_color" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/forunm_go_right"/>

        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/calendar_disable_color"
        />

    <RelativeLayout
        android:id="@+id/city_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改目的地"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/calendar_enable_color" />

        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="上海"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/calendar_disable_color"
        />

    <RelativeLayout
        android:id="@+id/date_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改出发日期"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/calendar_enable_color" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="5月11日"/>
        <TextView
            android:id="@+id/month_txt"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/date_txt"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/date_txt"
            android:textSize="12sp"
            android:text="周三"/>




    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/calendar_disable_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >
        <Button
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/orange_btn"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="确认改签"/>
    </LinearLayout>

</LinearLayout>

