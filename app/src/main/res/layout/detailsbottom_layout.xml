<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/bottom_lin"
    android:visibility="visible"
    >
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_e3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderstyle_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/query_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"
                android:drawableTop="@mipmap/consult_blue"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp"
                android:text="咨询"
                android:textColor="@color/color_00baff"
                android:textSize="11sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/d7" />

            <TextView
                android:id="@+id/collect_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"
                android:drawableTop="@mipmap/collect_blue"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp"
                android:text="收藏"
                android:textColor="@color/color_00baff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/buy_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_ea5413"
                android:gravity="center"
                android:text="购买"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>
</LinearLayout>