<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlBj"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mytitle_layout_height"
    android:background="@color/title_bg" >

    <RelativeLayout
        android:id="@+id/rlBack"
        android:layout_width="100dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/aci_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/smargin"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/isselect_txt"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/aci_left_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/btn_back_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/aci_title_tv"
            style="@style/ui_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:singleLine="true"
            android:text="Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/aci_subtitle_tv"
            style="@style/ui_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/t_fourteen"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/aci_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/smargin"
        android:gravity="center"
        android:textColor="@color/isselect_txt"
        android:textSize="14sp" />

    <Button
        android:id="@+id/aci_right_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:background="@drawable/xml_cross_btn"
        android:visibility="gone" />

</RelativeLayout>