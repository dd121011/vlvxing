<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_eaeaea"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.vlvxing.app.ui.PlaneRefundSuccessActivity">

    <include layout="@layout/plane_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/one_f"
            android:textSize="20sp"
            android:text="退改详情"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/qianhuise"
            android:textSize="15sp"
            android:text="①改签只办理一次,已经办理改签的车票,不再办理改签.对已改签机票,团队票及通票暂不提供此项服务"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="②办理改签时,新车票票价高于原车票的,补收差额;新车票票价低于原车票的,退还差额,对差额部分核收退票费并执行退票费标准"
            android:textColor="@color/qianhuise"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/qianhuise"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:text="③办理机票改签时(即到站不变),新车票票价高于原车票的,补收差额;新车票票价低于高=原车票的,退还差额,同样对差额部分核收退票费并执行现行退票费标准"/>
    </LinearLayout>

    </LinearLayout>